{
	"manifest_version": 3,
	"name": "GPT Performance Optimizer",
	"version": "1.0.0",
	"description": "Clamps ChatGPT conversations to last N messages keeping long chats fast.",
		"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},  
	"permissions": [
		"storage"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"128": "icons/icon128.png"
		},
		"default_title": "GPT Performance Optimizer Settings"
	},
	"host_permissions": [
		"https://chatgpt.com/*",
		"https://chat.openai.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://chatgpt.com/*",
				"https://chat.openai.com/*"
			],
			"js": [
				"util/settings-loader.js"
			],
			"run_at": "document_start",
			"all_frames": false,
			"world": "ISOLATED"
		},
		{
			"matches": [
				"https://chatgpt.com/*",
				"https://chat.openai.com/*"
			],
			"js": [
				"util/logger.js",
				"util/shared.js",
				"core/optimizer.js",
				"core/stream-hooks.js",
				"lib/marked.min.js",
				"lib/purify.min.js",
				"lib/highlight.min.js",
				"theme/clx-icons.js",
				"theme/clx-theme.js",
				"ui/toolbar.js",
				"ui/loader.js"
			],
			"run_at": "document_start",
			"all_frames": false,
			"world": "MAIN"
		}
	]
}
